<%- include('../partials/head') %>


    <link rel="stylesheet" href="/css/book.css" />

<main class="container">
      <section class="book">
        <article class="book-card">
          <div class="isbn-badge">
            <strong>ISBN:</strong> <%= book.isbn %>
          </div>

          <div class="cover">
            <img
              class="book-cover"
              src="<%= book.coverUrl %>"
              alt="<%= book.title %>"
            />
          </div>

          <div class="book-details">
            <h1 class="title"><%= book.title %></h1>

            <div class="data">
              <p><strong>Auteur :</strong> <a class="book__author" href="/books?author=<%=book.author %>"><%= book.author %></p></a>
              <p><strong>Date de publication :</strong> <%= book.publication_date.toLocaleDateString('fr-FR') %></p>
              <p><strong>Genre :</strong><p><div class="tags">
  <a href="/books?category=<%= encodeURIComponent(book.category) %>" class="tag <%= book.tagClass %>">
    <%= book.category %>
  </a>
</div>

            </div>

            <div class="tags">
              <span class="tag tag-pink"> <a class="book__category" href="/books?category=<%=book.category %>"><%= book.category %></p></a></span>
            </div>

            <p class="description">
              <strong>Résumé :</strong><br />
              <%= book.summary %>
            </p>

            <div class="actions">
              <button class="add-btn" type="button">+ Ajouter à ma bibliothèque</button>

              <select class="status-select">
                <option value="">Status</option>
                <option>Déjà lu</option>
                <option>En cours</option>
                <option>À lire</option>
              </select>
            </div>
          </div>
        </article>
      </section>
    </main>

    <%- include('../partials/foot') %>